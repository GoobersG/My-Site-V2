// .netlify/functions/redirect.js
exports.handler = async (event) => {
    const baseUrl = 'gavigardin.com'; // Replace with your actual base URL
    const path = event.path;
    let location = path.replace('#', '');
  
    // Redirect #contact to /contact
    if (location === '/#contact') {
      location = '/contact';
    }
  
    // Redirect #projects to /projects
    if (location === '/#projects') {
      location = '/projects';
    }
  
    return {
      statusCode: 302,
      headers: {
        Location: `${baseUrl}${location}`,
      }
    };
  };
  