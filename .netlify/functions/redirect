exports.handler = async (event) => {
    const path = event.path;
    let location = path;
    
    // Redirect #contact to /contact
    if (path.includes('#contact')) {
      location = '/contact';
    }
  
    // Redirect #projects to /projects
    if (path.includes('#projects')) {
      location = '/projects';
    }
  
    return {
      statusCode: 302,
      headers: {
        Location: location,
      }
    };
  };
  